<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighterGray"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ImageView
            android:id="@+id/background_layer_2"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/background_layer_2" />

        <ImageView
            android:id="@+id/background_layer_1"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="-36dp"
            android:layout_marginEnd="-1dp"
            android:padding="0dp"
            app:srcCompat="@drawable/background_layer_1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_layer_2"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/product_list" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="82dp"
            android:layout_height="47dp"
            android:layout_alignBottom="@+id/background_layer_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="173dp"
            android:layout_marginBottom="52dp"
            app:srcCompat="@drawable/logo" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignBottom="@+id/background_layer_1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="45dp"
            android:layout_toStartOf="@+id/logo"
            app:srcCompat="@drawable/account" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/background_layer_1"
            android:layout_alignBottom="@+id/background_layer_1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="60dp"
            app:srcCompat="@drawable/shopping_bag" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_layer_1"
            android:layout_alignBottom="@+id/background_layer_2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="81dp"
            android:fontFamily="@font/ps_bold"
            android:text="Hello,"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background_layer_1"
            android:layout_alignBottom="@+id/background_layer_2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="80dp"
            android:layout_toEndOf="@+id/textView6"
            android:fontFamily="@font/ps_bold_italic"
            android:text="Javier!"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="235dp"
            android:layout_height="27dp"
            android:layout_alignBottom="@+id/background_layer_2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="49dp"
            android:fontFamily="@font/ps_regular"
            android:text="Is this what you looking for?"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>