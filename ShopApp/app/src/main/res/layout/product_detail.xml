<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgItemPhoto"
            android:layout_width="match_parent"
            android:layout_height="473dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            tools:src="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/desc_box"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/desc_background"
                android:padding="0dp"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:srcCompat="@drawable/pay_button" />

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_alignTop="@+id/desc_box"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ps_bold"
                android:text="Product Title"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/product_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/desc_box"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@+id/product_title"
                android:textSize="14sp"
                android:fontFamily="@font/ps_regular"
                android:text="Version" />

            <ImageView
                android:id="@+id/add_button"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/desc_box"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="324dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="-24dp"
                app:srcCompat="@drawable/add_button" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="93dp"
                android:layout_height="21dp"
                android:layout_below="@+id/product_title"
                android:layout_alignStart="@id/desc_box"
                android:layout_alignBottom="@id/desc_box"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="228dp"
                app:srcCompat="@drawable/star3_5" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>